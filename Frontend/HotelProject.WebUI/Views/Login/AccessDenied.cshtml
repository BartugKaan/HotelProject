@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Access Denied - Hotel Management</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/assets/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link href="~/adminweb/css/style.css" rel="stylesheet">
</head>

<body class="h-100">
    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5 text-center">
                                <div class="mb-4">
                                    <i class="fas fa-lock text-danger" style="font-size: 4rem;"></i>
                                </div>

                                <h4 class="text-danger mb-4">Access Denied</h4>

                                <div class="alert alert-danger" role="alert">
                                    <strong>403 - Forbidden</strong><br>
                                    You don't have permission to access this resource.
                                </div>

                                <p class="text-muted mb-4">
                                    You need admin privileges to access the admin panel.
                                    Please contact your system administrator if you believe this is an error.
                                </p>

                                <div class="mt-4">
                                    <a href="/Login/Index" class="btn btn-primary me-3">
                                        <i class="fas fa-sign-in-alt"></i> Try Different Account
                                    </a>
                                    <a href="/" class="btn btn-outline-secondary">
                                        <i class="fas fa-home"></i> Go to Homepage
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
</body>
</html>