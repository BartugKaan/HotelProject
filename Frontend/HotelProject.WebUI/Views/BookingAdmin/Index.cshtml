@model List<ResultBookingDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}

<div class="container">
	<h2 class="mb-2">Booking Managment</h2>
	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>#</th>
					<th>Client Name</th>
					<th>E-mail</th>
					<th>Check In Date</th>
					<th>Check Out Date</th>
					<th>Status</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					count++;
					<tr>
						<th>@count</th>
						<td>@item.Name</td>
						<td>@item.Email</td>
						<td>@item.CheckIn.ToShortDateString()</td>
						<td>@item.CheckOut.ToShortDateString()</td>
						<td>
							<span class="badge badge-primary px-2">@item.Status</span>
						</td>
						<td class="d-flex justify-content-center ">
							<a href="/BookingAdmin/ApprovedReservation/@item.BookingId" class="btn btn-outline-success mr-1">Approve</a>
							<a href="" class="btn btn-outline-warning mr-1">Add To Wait List</a>
							<a href="" class="btn btn-outline-danger mr-1">Reject</a>
							<a href="" class="btn btn-outline-info mr-1">Update</a>
							<a href="" class="btn btn-outline-dark">Details</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>


